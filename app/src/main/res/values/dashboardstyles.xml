<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FourCardLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="TextHeaderSquare">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TextSubHeaderSquare" parent="@style/TextHeaderSquare">
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">bottom|center</item>
    </style>
    <style name="TextBodySquare" parent="@style/TextSubHeaderSquare">
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">top|center</item>
    </style>
    <style name="TextHeaderSplit" parent="TextHeaderSquare">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/blueColor</item>
    </style>
    <style name="TextBodySplit" parent="TextHeaderSquare">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>